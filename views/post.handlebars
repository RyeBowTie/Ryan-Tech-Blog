<div class="card">
    <div class="card-body">
        <form method="POST">
            <div class="form-group">
                <label for="post-title">What is the title of your post?</label>
                <input type="text" class="form-control" id="post-title">
            </div>
            <div class="form-group">
                <label for="post-text">Please write your post below</label>
                <textarea type="text" class="form-control" id="post-text" rows="10" cols="100"></textarea>
            </div>
            <div class="">
                <button type="submit" class="btn button btn-lg" id="post">Post</button>
            </div>
        </form>
    </div>
</div>

<script src="js/post.js"></script>