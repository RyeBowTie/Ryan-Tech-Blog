<div class="posts">
{{#each posts as |post| }}
<div class="card-body">
    <h3>{{post.title}}</h3>
    <p>{{post.text}}</p>
    <button value="{{post.id}}" class="btn btn-lg btn-primary delete">Delete</button>
</div>
{{#each post.comments as |comment|}}
<div class="card">
    <div class="card-body">
        <p>{{comment.comment_text}}</p>   
    </div>
</div>
{{/each}}
{{/each}}
</div>

<script src="/js/delete.js"></script>